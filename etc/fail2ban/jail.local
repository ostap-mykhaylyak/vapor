[wordpress-scan]
enabled = true
filter = wordpress-scan
logpath = /var/log/nginx/*access.log
maxretry = 20
bantime = 86400
findtime = 600
action = iptables-multiport[name=%(name)s, port="http,https"]
         curl -s -X POST -H "Content-Type: application/json" -H "Authorization: Bearer $(curl -s ifconfig.me)" --data '{"ip":"<ip>","jail":"<name>","comment":"WordPress plugin/theme scanner - automated vulnerability scanning","severity":"high","category":"scanner","failures":<failures>,"timestamp":"<time>","source_ip":"'$(curl -s ifconfig.me)'"}' %(blacklist_url)s
