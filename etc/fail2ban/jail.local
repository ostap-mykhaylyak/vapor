[wordpress-scan]
enabled = true
filter = wordpress-scan
logpath = /var/log/nginx/*access.log
maxretry = 20
bantime = 86400
findtime = 600
action = iptables-multiport[name=%(name)s, port="http,https"]
         curl -s -X POST -H "Content-Type: application/json" -H "Authorization: Bearer TUA-API-KEY" --data '{"ip":"<ip>","jail":"<name>","comment":"WordPress plugin scanner - automated vulnerability scanning detected","severity":"high","category":"scanner","failures":<failures>,"timestamp":"<time>","source":"'$(hostname)'","banned_at":"'$(date)'"}'  https://api.tuoservizio.com/blacklist/report
